<div class="container">
    <div class="row">
        <article class="col-8">
            {{#each blogs as |blog|}}
            <h2>
                {{blog.title}} hahaha
            </h2>
            <form >
                <div>
                    {{blog.blog_post}}
                </div>     

        <form class="comment-form col-4">
            <div>
                <textarea name="comment-body"></textarea>
            </div>

            <div>
                <button id="comment-submit" type="button" class="btn">add comment</button>
            </div>
        </form>
        {{/each}}
        <h2>is it coming</h2>
{{#each blogs.comments as |comment|}}
    <section class="comment">
        <div class="meta">
            
            {{user.username}} on {{format_date comment.createdAt}}
            {{comment.comment_text}}
        </div>
    </section>

    </div>
</div>
{{/each}}


