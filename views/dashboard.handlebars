<section>
  <div class="container d-flex justify-content-center">
    <div class="row">
      <h2>Your Workouts</h2>
    </div>
  </div>
  <div class="container d-flex justify-content-center">
    <div class="row">
      <button id="edit-btn" class="btn btn-success"><a href="/edit-workouts">Create a workout</a></button><br>
    </div>
  </div>
  <br>

  <div style="padding-left: 150px; padding-right: 150px;">
    <table class="table table-striped table-hover">
      <thead style="background-color: rgb(6, 137, 6);">
        <tr>
          <th scope="col" style="color: white;">Type</th>
          <th scope="col" style="color: white;">Duration</th>
          <th scope="col" style="color: white;">Calories Burned</th>
          <th scope="col" style="color: white;">Calories Consumed</th>
          <th scope="col" style="color: white;">Current Weight</th>
        </tr>
      </thead>
      <tbody>
        {{#each workouts as |workout|}}
        <tr>
          <td>{{exercise_type}}</td>
          <td>{{exercise_duration}} min.</td>
          <td>{{calories_burned}}</td>
          <td>{{calories_consumed}}</td>
          <td>{{current_weight}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  </div>
</section>
</div>
