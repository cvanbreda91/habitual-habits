  <div class="container d-flex">
    <div class="row d-flex"></div>
    {{#each blogs as |blog|}}

    <div class="col d-flex">

      <div class="card" style="max-width: 300px ; min-width: 300px;">
        <div class="card-body">
          <h5 class="card-title">{{title}}</h5>
          <p class="card-text">{{format_blog2 blog_post}}</p>
          <p>{{comments.length}} {{format_plural "comment" comments.length}}</p>
          <a href="/view-blogs/{{id}}" class="btn btn-success">Read Blog</a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
